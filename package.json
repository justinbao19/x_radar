{
  "name": "x-radar",
  "version": "1.0.0",
  "description": "X.com tweet scraper for pain points and trending AI topics",
  "type": "module",
  "scripts": {
    "login": "node src/login.mjs",
    "scrape": "node src/scrape.mjs",
    "select": "node src/select.mjs",
    "format": "node src/format.mjs",
    "comment": "node src/commenter.mjs",
    "translate": "node src/translator.mjs",
    "run": "npm run scrape && npm run select && npm run format && npm run translate",
    "sentiment:run": "ONLY_GROUPS=sentiment SENTIMENT_LOOKBACK_DAYS=7 npm run scrape && ONLY_GROUPS=sentiment npm run select && npm run format && npm run translate",
    "apply-feedback": "node scripts/apply-feedback.mjs",
    "sync-data": "node scripts/sync-data.mjs",
    "update-manifest": "node scripts/update-manifest.mjs",
    "notify:auth-failed": "node src/notify.mjs",
    "notify:success": "node src/notify.mjs --success",
    "notify:failure": "node src/notify.mjs --failure",
    "test": "node test/run-tests.mjs",
    "test:safety": "node --test test/safety.test.mjs",
    "test:select": "node --test test/select.test.mjs",
    "test:comment": "node --test test/commenter.test.mjs",
    "test:sync": "node --test test/sync-data.test.mjs",
    "test:data": "node --test test/data-loader.test.mjs",
    "test:feedback": "node --test test/feedback.test.mjs",
    "test:scrape": "node --test test/scrape.test.mjs",
    "test:perf": "node --test test/performance.test.mjs",
    "test:mock-server": "node test/mocks/mock-server.mjs",
    "test:e2e": "bash test/e2e.sh"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.93.2",
    "dotenv": "^16.3.1",
    "franc": "^6.2.0",
    "playwright": "^1.40.0"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
