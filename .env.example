# Claude API Configuration
LLM_API_URL=https://api.anthropic.com/v1/messages
LLM_API_KEY=sk-ant-api03-xxxx
LLM_MODEL=claude-sonnet-4-20250514

# Browser Configuration
# Set to 'true' for GitHub Actions / CI environments
PLAYWRIGHT_HEADLESS=false

# Scraping Configuration
# Maximum number of sources to scrape per run (higher = more tweets, longer runtime)
# Recommended: 24 for comprehensive scraping (~300 tweets in ~60min)
MAX_SOURCES=24

# Sampling mode: 'random' (recommended) or 'all'
# 'random' - randomly select MAX_SOURCES queries each run
# 'all' - scrape all queries (may take longer)
SAMPLING_MODE=random

# Runtime limit in minutes (scraping stops after this time to prevent timeout)
# Recommended: 60 for comprehensive scraping with ~300 tweets
RUN_TIME_LIMIT_MIN=60

# Scroll Configuration
# Number of scroll rounds per query (more = deeper content, longer runtime)
MIN_SCROLL_ROUNDS=7
MAX_SCROLL_ROUNDS=12

# Throttling Configuration (milliseconds)
# Adjust these to control human-like pacing
PAGE_LOAD_WAIT_MIN=4000
PAGE_LOAD_WAIT_MAX=8000
BETWEEN_QUERIES_WAIT_MIN=15000
BETWEEN_QUERIES_WAIT_MAX=30000
SCROLL_WAIT_MIN=2000
SCROLL_WAIT_MAX=4000

# Brand Safety Configuration
# Minimum FiloFit keyword matches required (default: 2)
# Tweets with fewer matches are filtered out
MIN_FILO_FIT=2

# Telegram Bot Configuration
# Get bot token from @BotFather, chat ID from getUpdates API
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_or_channel_id
