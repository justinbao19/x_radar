# Claude API Configuration
LLM_API_URL=https://api.anthropic.com/v1/messages
LLM_API_KEY=sk-ant-api03-xxxx
LLM_MODEL=claude-sonnet-4-20250514

# Browser Configuration
# Set to 'true' for GitHub Actions / CI environments
PLAYWRIGHT_HEADLESS=false

# Scraping Configuration
# Maximum number of sources to scrape per run (reduces load)
MAX_SOURCES=8

# Sampling mode: 'random' (recommended) or 'all'
# 'random' - randomly select MAX_SOURCES queries each run
# 'all' - scrape all queries (may take longer)
SAMPLING_MODE=random

# Brand Safety Configuration
# Minimum FiloFit keyword matches required (default: 2)
# Tweets with fewer matches are filtered out
MIN_FILO_FIT=2

# Telegram Bot Configuration
# Get bot token from @BotFather, chat ID from getUpdates API
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_CHAT_ID=your_chat_or_channel_id
